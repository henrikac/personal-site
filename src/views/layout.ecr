<!doctype html>
<html lang="en">
	<head>
		<meta charset="utf-8">
		<meta name="viewport" content="width=device-width, initial-scale=1">

		<link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bulma@0.9.3/css/bulma.min.css">
		<script src="https://kit.fontawesome.com/f8deb56b81.js" crossorigin="anonymous"></script>

		<link rel="stylesheet" href="/css/main.css">

		<title>HenrikAC</title>
	</head>
	<body id="home" class="has-navbar-fixed-top">
		<nav class="navbar is-fixed-top is-link" role="navigation" aria-label="main navigation">
			<div class="container">
				<div class="navbar-brand">
					<a class="navbar-item is-size-3 has-text-weight-medium navbar-scroll" href="/">HenrikAC</a>

					<a role="button" class="navbar-burger is-active" aria-label="menu" aria-expanded="false" data-target="mainNavbar">
						<span aria-hidden="true"></span>
						<span aria-hidden="true"></span>
						<span aria-hidden="true"></span>
					</a>
				</div>

				<div id="mainNavbar" class="navbar-menu is-active">
					<div class="navbar-end">
						<a href="/" class="navbar-item navbar-scroll">
							Home
						</a>
						<a href="#projects" class="navbar-item navbar-scroll">
							Projects
						</a>
						<a href="#about" class="navbar-item navbar-scroll">
							About me
						</a>
						<% if env.session.object?("user") %>
							<form method="POST" action="/logout" class="navbar-item">
								<input type="hidden" name="authenticity_token" value='<%= env.session.string("csrf") %>'>
								<button type="submit" class="button is-link">Log out</button>
							</form>
						<% end %>
					</div>
				</div>
			</div>
		</nav>

		<main>
			<%= content %>
		</main>

		<footer class="footer has-background-white has-text-dark pb-5">
			<div class="content has-text-centered">
				<a href="https://twitter.com/henrikabel" target="_blank" class="social-media">
					<span class="icon is-large mx-2">
						<span class="fa-stack fa-lg">
							<i class="fas fa-circle fa-stack-2x" aria-hidden="true"></i>
							<i class="fab fa-twitter fa-stack-1x fa-inverse" aria-hidden="true"></i>
						</span>
					</span>
				</a>
				<a href="https://github.com/henrikac" target="_blank" class="social-media">
					<span class="icon is-large mx-2">
						<span class="fa-stack fa-lg">
							<i class="fas fa-circle fa-stack-2x" aria-hidden="true"></i>
							<i class="fab fa-github fa-stack-1x fa-inverse" aria-hidden="true"></i>
						</span>
					</span>
				</a>
			</div>
			<div class="content has-text-centered">
				<p>&copy; <%= Time.utc.year %> Henrik A. Christensen</p>
			</div>
		</footer>

		<script src="/js/styles.js"></script>
	</body>
</html>
